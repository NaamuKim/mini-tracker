{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "typeRoots": ["./types", "./node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["node_modules"]
}
